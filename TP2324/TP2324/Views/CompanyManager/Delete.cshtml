@model TP2324.Models.Company

@{
    ViewData["Title"] = "Delete";
}


<!-- ======= Intro Single ======= -->
<section class="intro-single">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-8">
                <div class="title-single-box">
                    <h1 class="title-single">Apagar Empresa/locador</h1>
                    <span class="color-text-a">Apague uma empresa ou locador da plataforma</span>
                </div>
            </div>
            <div class="col-md-12 col-lg-4">
                <nav aria-label="breadcrumb" class="breadcrumb-box d-flex justify-content-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="#">Pagina principal</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Empresas/Locadores/Apagar
                        </li>
                    </ol>
                </nav>
            </div>

        </div>
    </div>
</section><!-- End Intro Single-->


<div class="container mt-4">
    <div>
        <h4>Detalhes da Empresa</h4>
        <dl class="row">
            <dt class="col-sm-2 text-muted">Nome:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-2 text-muted">Descrição:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

            <dt class="col-sm-2 text-muted">Classificação:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Rating)</dd>

            <dt class="col-sm-2 text-muted">Estado:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.State)</dd>

            <dt class="col-sm-2 text-muted">Email:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.EmailDomain)</dd>
        </dl>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <ul>
                    @foreach (var key in ViewData.ModelState.Keys)
                    {
                        foreach (var error in ViewData.ModelState[key].Errors)
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    }
                </ul>
            </div>
        }

        <div class="mb-3">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Excluir</button>
                <a asp-action="Index" class="btn btn-c">Voltar</a>
            </form>
        </div>
    </div>
</div>
