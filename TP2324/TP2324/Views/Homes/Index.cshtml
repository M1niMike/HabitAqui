@model IEnumerable<TP2324.Models.Home>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Tipo
            </th>
            <th>
                Preço de Arrendamento
            </th>
            <th>
                Preço de Compra
            </th>
            <th>
                Quartos
            </th>
            <th>
                Wc
            </th>
            <th>
                Morada
            </th>
            <th>
                Área Útil
            </th>
            <th>
                Estacionamento
            </th>
            <th>
                WiFi
            </th>
            <th>
                Descrição
            </th>
            <th>
                Arrendar
            </th>
            <th>
                Comprar
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceToRent)€
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceToPurchase)€
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumRooms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumWC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SquareFootage)m²
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumParks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wifi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.toRent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.toPurchase)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
