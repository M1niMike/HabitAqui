@model IEnumerable<TP2324.Models.Renting>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- ======= Intro Single ======= -->
<section class="intro-single">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-8">
                <div class="title-single-box">
                    <h1 class="title-single">Meus arrendamentos</h1>
                    <span class="color-text-a">Veja os seus arrendamentos</span>
                </div>
            </div>
            <div class="col-md-12 col-lg-4">
                <nav aria-label="breadcrumb" class="breadcrumb-box d-flex justify-content-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="#">Pagina principal</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Meus Arrendamentos
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section><!-- End Intro Single-->



<div class="container">
    @if (Model.Count() == 0)
    {
        <p>Não existe(m) arrendamento(s).</p>
        return;
    }

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">
                    Preço
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.BeginDate)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                @* <th scope="col">
                    Endereço
                </th> *@
                <th scope="col">Opções</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BeginDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                   @*  <td>
                        @Html.DisplayFor(modelItem => item.Homes.Address)
                    </td> *@
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-c" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a class="btn btn-c" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                            <a class="btn btn-c" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


