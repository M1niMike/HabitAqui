@model List<Home>
@{
    ViewData["Title"] = "Home Page";
}


<div class="carousel-new">
    <div class="intro intro-carousel swiper position-relative">
        <div class="swiper-wrapper">
                @foreach (var home in Model)
                {
                    <div class="swiper-slide carousel-item-a intro-item bg-image" style="background-image: url('@home.ImgUrl')">
                        <div class="overlay overlay-a"></div>
                        <div class="intro-content display-table">
                            <div class="table-cell">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-lg-8">
                                            <div class="intro-body">
                                                <h1 class="intro-title mb-4 ">
                                                    <span class="color-b"> @home.Type </span>
                                                    <br> @home.Address
                                                </h1>
                                                <p class="intro-subtitle intro-price">
                                                @if (home.toRent && !home.toPurchase){
                                                    <a href="#"><span class="price-a">Arrendar | € @home.PriceToRent</span></a>
                                                }else if(home.toRent && home.toPurchase){
                                                    <a href="#"><span class="price-a">Arrendar | € @home.PriceToRent</span></a>
                                                    <a href="#"><span class="price-a">Comprar | € @home.PriceToPurchase</span></a>
                                                }else{
                                                    <a href="#"><span class="price-a">Comprar | € @home.PriceToPurchase</span></a>
                                                }                                         
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
        </div>
        <div class="swiper-pagination"></div>
    </div>
</div>


